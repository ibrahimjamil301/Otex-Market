<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/rating_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        app:layout_constraintTop_toTopOf="@id/planCard"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:translationY="-40dp"
        android:elevation="6dp"
        android:background="@drawable/rectangle9"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="أعلى مشاهدات"
            android:layout_gravity="center"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/tajawal_medium" />

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/planCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@android:color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/planCheckBox"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:button="@drawable/checkbox_selector" />

                <TextView
                    android:id="@+id/planName"
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="700"
                    android:fontFamily="@font/tajawal_bold"
                    android:includeFontPadding="false"
                    android:text="العنوان"
                    android:textColor="@color/black_l"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/planPrice"
                    android:layout_width="70dp"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tajawal_bold"
                    android:includeFontPadding="false"
                    android:text="@string/underlined_text"
                    android:textColor="@color/orange_color"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="400dp"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="@color/gray_color"
                    android:gravity="center" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/bonus"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    >

                    <TextView
                        android:id="@+id/bonusNumber"
                        android:layout_width="70dp"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:text="7"
                        android:textSize="14sp"
                        android:textColor="@color/green"
                        android:background="@drawable/half_circle_bg"
                        android:fontFamily="@font/tajawal_bold" />

                    <TextView
                        android:id="@+id/bonusText"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:text="ضعف عدد\nالمشاهدات"
                        android:textColor="@color/black_l"
                        android:textSize="12sp"
                        android:fontFamily="@font/tajawal_regular"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="120dp">

                    <LinearLayout
                        android:id="@+id/feature1"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon0"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/planDuration"
                            android:layout_width="300dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/tajawal_medium"
                            android:includeFontPadding="false"
                            android:text="الفئه1"
                            android:textColor="@color/black_l"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/feature2"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/planExtraInfo"
                            android:layout_width="300dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/tajawal_medium"
                            android:includeFontPadding="false"
                            android:text="الفئه2"
                            android:textColor="@color/black_l"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/feature3"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/planExtraInfo1"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/tajawal_medium"
                            android:includeFontPadding="false"
                            android:text="الفئه02"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tint"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:gravity="right"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tint1"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:fontFamily="@font/tajawal_medium"
                            android:includeFontPadding="false"
                            android:text="تابع الفئه02"
                            android:textColor="#FF4144"
                            android:textSize="14sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/feature4"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/planExtraInfo2"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/tajawal_medium"
                            android:includeFontPadding="false"
                            android:text="الفئه3"
                            android:textColor="@color/black_l"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/feature5"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/planExtraInfo3"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/tajawal_medium"
                            android:includeFontPadding="false"
                            android:text="الفئه4"
                            android:textColor="@color/black_l"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/feature6"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/planExtraInfo4"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/tajawal_medium"
                            android:includeFontPadding="false"
                            android:text="الفئه5"
                            android:textColor="@color/black_l"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>


