<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_margin="8dp"
    android:layout_height="360dp"
    android:background="@drawable/gray_bg_container"
    >


    <ImageView
        android:id="@+id/pic"
        android:layout_width="160dp"
        android:layout_height="215dp"
        android:background="@color/brand_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shirt" />

    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="125dp"
        android:layout_height="17dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="جاكيت من الصوف مناسب"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/tajawal_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pic"
        android:maxLines="1"
        android:ellipsize="end"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/priceTxt"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:text="32,000,000جم"
        android:textColor="@color/red"
        android:layout_marginEnd="8dp"
        android:textSize="14sp"
        android:fontFamily="@font/tajawal_regular"
        app:layout_constraintTop_toBottomOf="@+id/titleTxt"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="19dp"
        android:layout_height="19dp"
        app:srcCompat="@drawable/vector"
        app:layout_constraintTop_toBottomOf="@+id/pic"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="18dp"
        app:srcCompat="@drawable/favorite"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/saleTxt"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="تم بيع 3.3k+"
        android:textColor="@color/gray_color"
        android:textSize="10sp"
        android:fontFamily="@font/tajawal_regular"
        app:layout_constraintEnd_toStartOf="@id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/priceTxt"
        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="8dp"
        android:layout_height="10dp"
        app:srcCompat="@drawable/local_fire_department"
        app:layout_constraintTop_toBottomOf="@id/priceTxt"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="8dp"
        />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="26dp"
        android:layout_height="26dp"
        app:srcCompat="@drawable/company_badge"
        app:layout_constraintTop_toBottomOf="@id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        />

    <ImageView
        android:id="@+id/adToCart"
        android:layout_width="32dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/add_to_cart"
        app:layout_constraintTop_toBottomOf="@id/imageView4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="42dp"
        />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="15dp"
        android:layout_height="22dp"
        app:srcCompat="@drawable/logo"
        app:layout_constraintTop_toBottomOf="@id/imageView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/adToCart"
        android:layout_marginTop="24dp"
        android:layout_marginStart="4dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
